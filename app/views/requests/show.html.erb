<div class="header">
    <h3>Your Request</h3>
    <div class="switch">
      <%= link_to 'New Requests', '/requests/new' %>
    </div>
    <div class="switch">
      <%= link_to 'View Requests', '/requests' %>
  </div>
</div>
<div class = "containerTable"> 
    <table border=.5>
        <tr>
            <th>Time Created</th>
            <th>Student ID</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Pick-Up Location</th>
            <th>Drop-Off Location</th>
            <th>Pick-Up Date</th>
            <th>Pick-Up Time</th>
            <th>Status</th>
        </tr>
        <tr>
            
            <td><%= @request.created_at %></td> 
            <td><%= @request.StudentID %></td>
            <td><%= @request.FirstName %></td>
            <td><%= @request.LastName %></td>
            <td><%= @request.Email %></td>
            <td><%= @request.PULocation %></td>
            <td><%= @request.DOLocation %></td>
            <td><%= @request.PUDate %></td>
            <td><%= @request.PUTime %></td>
            <td><%= @request.status %></td>
            <td class="tableButton"><%= link_to 'Delete', request_path(@request.id), :method => :DELETE  %></td>
            
            
            
        </tr>
    </table>
</div>
    