<div class="header">
    <h3>Show Location</h3>
    <div class="switch">
        <%= button_to 'New Location', '/locations/new',:method => "get" %>
    </div>
    <div class="switch">
        <%= button_to 'View Locations', '/locations',:method => "get" %>
    </div>
</div>

<div class = "container"> 
    <div>View Individual Location</div>
    <table class="table">
        <thead>
            <tr>
                <th>Location Name</th>
                <th>Location Address</th>
                <th>Location Type</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td><%= @location.name %></td> 
                <td><%= @location.address %></td>
                <td><%= @location.locationType %></td>
                <td class="tableButton"><%= link_to 'Delete', location_path(@location.id), :method => :DELETE  %></td>
            </tr>
        </tbody>
    </table>
</div>
    

