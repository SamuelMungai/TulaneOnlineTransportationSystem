<!DOCTYPE html>
<html>
<head>
  <title>TOTS</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <!-- Latest compiled and minified CSS -->
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">

<!-- jQuery library -->
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>


  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
</head>
<body>
  <nav class="navbar navbar-inverse">
    <div class="container-fluid">
      <div class="navbar-header">
        <a class="navbar-brand" href="/requests">TOTS</a>
      </div>
      <% if current_user %>
      <ul class="nav navbar-nav">
        <% if current_user.user_type=="Student" %>
        <li class="<%= 'active' if current_page?('/requests') %>"><a href="/requests">My Requests</a></li>
        <li class="<%= 'active' if current_page?('/requests/new') %>"><a href="/requests/new">New Request</a></li>
        
        <% elsif current_user.user_type=="Manager" %>
        <li class="<%= 'active' if current_page?('/requests') %>"><a href="/requests">View Requests</a></li>
        <li class="<%= 'active' if current_page?('/requests/new') %>"><a href="/requests/new">New Request</a></li>

        <li class="dropdown"><a class="dropdown-toggle" data-toggle="dropdown" href="/locations">Locations<span class="caret"></span></a>
          <ul class="dropdown-menu">
            <li><a href="/locations">View Locations</a></li>
            <li><a href="/locations/new">New Location</a></li>
          </ul>
        </li>
        <% end %>
      
      </ul>
      <ul class="nav navbar-nav navbar-right">  
        <li><a href="/update"> <%= current_user.name %> <span class="glyphicon glyphicon-user"></span></a></li>
        <li><a href="/logout">Sign Out <span class="glyphicon glyphicon-log-out"></span></a></li>
      </ul>  
      
      <% else %>
      <ul class="nav navbar-nav navbar-right">  
        <li><a href="/auth/facebook">Sign In <span class="glyphicon glyphicon-log-in"></span></a></li>
      </ul>  
      <% end %>
    </div>
  </nav>
  
  <%= yield %>

</body>
</html>
